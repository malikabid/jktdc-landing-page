{
    "name": "dotk/admin-cms",
    "description": "DOTK Admin CMS - Lightweight content management system",
    "type": "project",
    "require": {
        "php": "^8.0",
        "slim/slim": "4.*",
        "slim/psr7": "^1.8",
        "php-di/php-di": "^7.1",
        "monolog/monolog": "^3.10",
        "firebase/php-jwt": "^6.0",
        "robthree/twofactorauth": "^3.0",
        "illuminate/database": "^12.47",
        "vlucas/phpdotenv": "^5.6",
        "respect/validation": "^2.4",
        "slim/twig-view": "^3.4",
        "nesbot/carbon": "^3.0",
        "symfony/clock": "^7.0",
        "symfony/translation": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs src --standard=PSR12",
        "phpcbf": "phpcbf src --standard=PSR12"
    }
}
